	<script>
		function load() {
            launch_app()
        }

        function clickHere() {
            launch_app()
        }


        function launch_app() {
            var url = document.URL;
            url = url.split('?');
            let userAgentString = navigator.userAgent;
           
            var jobId = '';
			var userId = '';
			var tempId = ''
			var communityPostId = '';
            var reelID = '';
            jobId = getParameterByName('jobId');
			communityPostId = getParameterByName('communityPostId');
			reelID = getParameterByName('reelID');
			userId = getParameterByName('userId');
			tempId = getParameterByName('tempId');

            var page = null;
            var id = null;

            if (jobId != '' && jobId != null) {
                page = 'seekerjobdetail';
                id = jobId;
            }
			if (communityPostId != '' && communityPostId != null) {
                page = 'communityPostDetails';
                id = communityPostId;
            }
			if (reelID != '' && reelID != null) {
                page = 'reelView';
                id = reelID;
            }
			if (userId != '' && userId != null) {
                page = 'userDetails';
                id = userId;
            }
			if (tempId != '' && tempId != null) {
                page = 'home';
                id = tempId;
            }
           
            if (page != null) {
                let isChrome = userAgentString.indexOf("Chrome") > -1;
                let isSafari = userAgentString.indexOf("Safari") > -1;
                if ((isChrome) && (isSafari)) isSafari = false;


                console.log("chrome", isChrome);
                console.log(`applykart-app://${page}/${id}`);
                console.log("safari", isSafari);

                if (getMobileOperatingSystem().toLowerCase() == 'android') {
                    window.location = `applykart-app://${page}/${id}`;
                    setTimeout(function () { window.location.replace("https://play.google.com/store/apps/details?id=com.applykart"); }, 2000);
                }
                else {
                    if (isSafari) {
                        window.location.href = `applykart-app://${page}/${id}`;
                        setTimeout(function () { window.location.replace(" https://apps.apple.com/in/app/applykart/id1638867413"); }, 2000);
                    } else {
                        window.location = `applykart-app://${page}/${id}`;
                        setTimeout(function () { window.location.replace(" https://apps.apple.com/in/app/applykart/id1638867413"); }, 2000);
                    }
                }  
            }
            
        }

        function getMobileOperatingSystem() {
            var userAgent = navigator.userAgent || navigator.vendor || window.opera;

            // Windows Phone must come first because its UA also contains "Android"
            if (/windows phone/i.test(userAgent)) {
                return "Windows Phone";
            }

            if (/android/i.test(userAgent)) {
                return "Android";
            }

            if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                return "iOS";
            }

            return "unknown";
        }

        function getParameterByName(name, url = window.location.href) {
            name = name.replace(/[\[\]]/g, '\\$&');
            var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, ' '));
        }

	</script>
